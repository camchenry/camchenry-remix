{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "postinstall": "remix setup",
    "build": "npm run build:css && remix build",
    "dev": "remix run",
    "start": "remix-serve build",
    "test": "jest --watch",
    "lint": "eslint --ext js,jsx,ts,tsx app/**",
    "lint:fix": "eslint --ext js,jsx,ts,tsx --fix app/**",
    "watch:css": "postcss styles --base styles --dir app/styles -w",
    "build:css": "postcss styles --base styles --dir app/styles --env production",
    "vercel-build": "yum install --skip-broken libuuid-devel libmount-devel zlib && cp /lib64/{libuuid,libmount,libblkid,libz}.so.1 node_modules/canvas/build/Release/"
  },
  "dependencies": {
    "@remix-run/node": "^0.18.2",
    "@remix-run/react": "^0.18.2",
    "@remix-run/serve": "^0.18.2",
    "@remix-run/vercel": "^0.18.2",
    "@tailwindcss/typography": "^0.4.0",
    "@vercel/node": "^1.10.0",
    "autoprefixer": "^10.2.5",
    "canvas": "2.6.1",
    "date-fns": "^2.24.0",
    "date-fns-tz": "^1.1.4",
    "globby": "^11.0.4",
    "highlight.js": "^10.7.2",
    "jest": "^27.2.0",
    "postcss": "^8.3.0",
    "postcss-cli": "^8.3.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-hook-form": "^7.15.4",
    "react-router-dom": "^6.0.0-beta.0",
    "remark": "^13.0.0",
    "remark-frontmatter": "^3.0.0",
    "remark-gfm": "^1.0.0",
    "remark-highlight.js": "^6.0.0",
    "remark-html": "^13.0.1",
    "remark-parse": "^9.0.0",
    "remark-parse-frontmatter": "^1.0.3",
    "remix": "^0.18.2",
    "tailwind-styled-components": "^2.0.2",
    "tailwindcss": "^2.1.2",
    "unified": "^9.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-typescript": "^7.15.0",
    "@types/jest": "^27.0.1",
    "@remix-run/dev": "^0.18.2",
    "@types/react": "^17.0.6",
    "@types/react-dom": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "babel-jest": "^27.2.0",
    "eslint": "^7.26.0",
    "typescript": "^4.2.4"
  },
  "engines": {
    "node": "14"
  },
  "sideEffects": false
}
